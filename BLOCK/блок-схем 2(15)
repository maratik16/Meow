#include <iostream>
#include <math.h>
using namespace std;
int main() {
    float x, y;
    cout<<"\n Enter a value "; cin>>x;
    if(x<0)
    {
        y=pow(x, 2)+1;
    }
    else
    {
    if (x>=1) 
    {
    y=4*x-1;
    }
    else
    {
    y=2*x+1;
    }
    }
    cout<<"\ny="<<y;
    return 0;
}
